{{#if updateBundleFormShow}}
  <form>
    <label for="bundleName">Name</label>
    {{input value=bundleName id="bundleName" placeholder=bundle.bundleName}}
    <label for="description">Description</label>
    {{input value=description id="description" placeholder=bundle.bundleImage}}
    <label for="price">Price</label>
    {{input value=price id="price" placeholder=bundle.price}}
  <button class="btn btn-success"{{action "updateBundle" bundle}}>Edit</button>
  </form>
{{else}}
<button class="btn btn-success" {{action "showForm"}}>Edit</button>
{{/if}}

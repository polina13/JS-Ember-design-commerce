{{#if updateProductFormShow}}
  <form>
    <label for="productName">Name</label>
    {{input value=productName id="productName" placeholder=product.productName}}
    <label for="description">Description</label>
    {{input value=description id="description" placeholder=product.description}}
    <label for="mediaType">Media Type</label>
    {{input value=mediaType id="mediaType" placeholder=product.mediaType}}
    <label for="productImage">Images </label>
    {{input value=productImage id="productImage" placeholder=product.productImage}}
    <label for="price">Price</label>
    {{input value=price id="price" placeholder=product.price}}
    <label for="recommendedProducts">Price</label>
    {{input value=recommendedProducts id="recommendedProducts" placeholder=product.recommendedProducts}}
  <button class="btn btn-success"{{action "updateProduct" product}}>Edit</button>
  </form>
{{else}}
<button class="btn btn-success" {{action "showForm"}}>Edit</button>
{{/if}}
